<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.submission.dialogs.ConfirmationActivity"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp"
    android:layout_margin="16dp"
    style="@style/Theme.AppCompat.Light.Dialog.Alert">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_close_24"
            android:background="@drawable/close_btn_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/close_btn"/>

        <TextView
            android:id="@+id/close_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/are_you_sure"
            android:textStyle="bold"
            android:textSize="32sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/close_btn"
            android:layout_marginTop="64dp"/>

        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/close_question"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Yes"
            android:background="@drawable/transparent_btn"
            android:padding="16dp"
            android:textColor="@color/colorGold"
            android:layout_marginTop="16dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>