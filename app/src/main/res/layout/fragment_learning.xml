<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="com.oluwafemi.gadsleaderboard.viewModels.LearningViewModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.LearningFragment"
        android:background="@color/colorAccent">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/small_padding"
            android:layout_marginTop="@dimen/recycler_margin"
            tools:listitem="@layout/learning_leaders"
            android:id="@+id/recycler_learning"
            leaderList="@{viewModel.learningLeaders}"
            />

    </LinearLayout>
</layout>