<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@null</item>
        <item name="colorPrimaryDark">@null</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="background">@drawable/launch</item>
    </style>

    <style name="ToolbarTextAppearance">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/Heading</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="ToolbarButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/colorWhite</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/Heading</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:fitsSystemWindows">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:padding">@dimen/toolbar_padding</item>
        <item name="android:layout_marginTop">@dimen/toolbar_margin</item>
    </style>

</resources>